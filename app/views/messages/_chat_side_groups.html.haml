.side__user
  %ul.side__list
    %li.side__list__name
      = current_user.name
    %li.side__list__edit-group
      = link_to edit_user_path(current_user) do
        %i.fa.fa-cog
    %li.side__list__edit-user
      = link_to new_group_path do
        %i.fa.fa-edit
.side__group
  %ul.side__list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        %li.side__list-group
          = group.name
        %li.side__list-message
          = group.show_last_message

